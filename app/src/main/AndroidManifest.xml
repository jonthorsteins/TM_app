<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hi.is.tournamentmanager.tm">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.ViewTournamentActivity"
            android:label="@string/title_activity_view_tournament"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ui.LoginActivity"
            android:noHistory="true" />
        <activity android:name=".ui.ViewProfileActivity" />
        <activity android:name=".ui.ViewAllTournamentsActivity" />
        <activity android:name=".ui.EditTournamentActivity" />
        <activity android:name=".ui.EditMatchActivity" />
        <activity android:name=".ui.CreateTournamentActivity" />
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>